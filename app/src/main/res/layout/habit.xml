<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewHabit"
        android:layout_width="327dp"
        android:layout_height="128dp"
        android:background="@drawable/border"
        android:lineSpacingExtra="10sp"
        android:paddingTop="10dp"
        android:text="habit name"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="36dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="343dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHabit"
        app:layout_constraintEnd_toEndOf="@+id/textViewHabit"
        app:layout_constraintStart_toStartOf="@+id/textViewHabit"
        app:layout_constraintTop_toTopOf="@+id/textViewHabit"
        app:layout_constraintVertical_bias="0.567">


        <RadioButton
            android:id="@+id/radioButtonSun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radioButtonMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radioButtonTue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radioButtonWed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radioButtonThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radioButtonFri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radioButtonSat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView24"
        android:layout_width="247dp"
        android:layout_height="23dp"
        android:layout_marginTop="33dp"
        android:text="Sun  Mon  Tue  Wed  Thu  Fri  Sat"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="@+id/textViewHabit"
        app:layout_constraintStart_toStartOf="@+id/textViewHabit"
        app:layout_constraintTop_toBottomOf="@+id/textViewHabit"
        app:layout_constraintVertical_bias="0.962" />

    <Button
        android:id="@+id/button"
        android:layout_width="61dp"
        android:layout_height="36dp"
        android:text="Edit"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="124dp" />
</androidx.constraintlayout.widget.ConstraintLayout>